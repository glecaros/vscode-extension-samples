{
	"name": "lsp-embedded-language-service-sample",
	"description": "A language server example using language services to support embedded languages",
	"author": "Microsoft Corporation",
	"license": "MIT",
	"version": "1.0.0",
	"repository": {
		"type": "git",
		"url": "https://github.com/Microsoft/vscode-extension-samples"
	},
	"publisher": "vscode-samples",
	"categories": [],
	"keywords": [],
	"engines": {
		"vscode": "^1.74.0"
	},
	"activationEvents": [
		"onLanguage:prompty"
	],
	"main": "./client/out/extension",
	"contributes": {
		"languages": [
			{
				"id": "prompty",
				"extensions": [
					".prompty"
				]
			}
		],
		"grammars": [
			{
				"language": "prompty",
				"scopeName": "source.prompty",
				"path": "./syntaxes/prompty.tmLanguage.json"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "cd client && npm install && cd .. && npm run compile",
		"compile": "tsc -b",
		"watch": "tsc -b -w",
		"lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
		"generate-grammar": "js-yaml ./syntaxes/prompty.tmLanguage.yaml > ./syntaxes/prompty.tmLanguage.json",
		"postinstall": "npm run generate-grammar && cd client && npm install && cd ../server && npm install && cd .."
	},
	"devDependencies": {
		"@types/mocha": "^5.2.7",
		"@types/node": "^16.18.34",
		"@typescript-eslint/eslint-plugin": "^6.7.0",
		"@typescript-eslint/parser": "^6.7.0",
		"eslint": "^7.21.0",
		"js-yaml": "^4.1.0",
		"typescript": "^5.4.2"
	}
}
